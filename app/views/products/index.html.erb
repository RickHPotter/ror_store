<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <title>Title</title>
  </head>

  <body>
    <%= nav_bar do %>
      <%= menu_group do %>
        <%= menu_item "Home", root_url %>
        <%= menu_item "Products", products_url %>
        <%= menu_item "Contact", "#" %>
      <% end %>
    <% end %>
    <div class="container">
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Price</td>
            <td>Stock</td>
          </tr>
          <% @products_not_on_sale.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.description %></td>
              <td><%= product.price %></td>
              <td><%= product.stock %></td>
            </tr>
          <% end %>
        </thead>
      </table>
      <div class = "alert alert-success text-center" role = "alert">
        <h2 class = "alert-heading">On Sale</h2>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Price</td>
            <td>Stock</td>
          </tr>
          <% @on_sale.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.description %></td>
              <td><%= product.price %></td>
              <td><%= product.stock %></td>
            </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </body>
</html>
