<div class="container table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Price</td>
        <td>Stock</td>
        <td colspan="1" >

      </tr>
      <% @search.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.stock %></td>
          <td style = "text-align:center; width: 15%">
            <%= button_to "Edit", product, method: :edit, class: "btn btn-primary" %>
            <%= button_to "Delete", product, method: :delete, class: "btn btn-danger",
          data: {confirm: "Are you sure you want to remove #{product.name}"} %>
          </td>
        </tr>
      <% end %>
    </thead>
  </table>
</div>
